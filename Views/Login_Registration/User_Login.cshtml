<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>Foodie Wheels</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <h5 class="login-box-msg">User Login</h5>

                @using (Html.BeginForm("User_Login", "Login_Registration", FormMethod.Post))
                {
                    <div class="form-group mb-3">
                        <div class="input-group mb-1">
                            @Html.TextBoxFor(e => e.email, new { id = "email", type = "email", @class = "form-control", @placeholder = "Email" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-1">
                            @Html.ValidationMessageFor(e => e.email, "", new { @class = "text-danger", @style = "font-size: 13px" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="input-group mb-1">
                            @Html.PasswordFor(e => e.password, new { id = "password", type = "password", @class = "form-control", @placeholder = "Password" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-1">
                            @Html.ValidationMessageFor(e => e.password, "", new { @class = "text-danger", @style = "font-size: 13px" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }

                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>

                </div>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href=@Url.Action("Admin_Login","Login_Registration")>Admin Login</a>
                </p>
                <p class="mb-1">
                    <a href="forgot-password.html">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href=@Url.Action("User_Register","Login_Registration") class="text-center">Register a new User</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
